<Window x:Class="Example14Project.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Project"
        mc:Ignorable="d"
        Title="Image Brush
        " Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Rectangle Height="260" Stroke="Black" Width="388" Canvas.Left="95" Canvas.Top="51"  HorizontalAlignment="Center" VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Duck.jpg"/>
            </Rectangle.Fill>
        </Rectangle>

        <Ellipse Height="172" Stroke="Black"  Width="172" Canvas.Left="542" Canvas.Top="217" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.5">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Peacock.jpg" Stretch="UniformToFill"/>

            </Ellipse.Fill>
        </Ellipse>

    </Canvas>
</Window>
