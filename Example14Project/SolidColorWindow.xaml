<Window x:Class="Example14Project.SolidColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Project"
        mc:Ignorable="d"
        Title="Solid Color Brush" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Rectangle Height="100" Stroke="Black" Width="241" Canvas.Left="242" Canvas.Top="129" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Rectangle.Fill>
                <SolidColorBrush Color="Aqua"/>
            </Rectangle.Fill>
        </Rectangle>

        <Ellipse Height="100" Stroke="Black" Width="100" Canvas.Left="591" Canvas.Top="227">
            <Ellipse.Fill>
                <SolidColorBrush Color="Orange"/>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
</Window>
