<Window x:Class="CounterProject.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="Counter App" Height="450" Width="800" Closed="Window_Closed">
    <Canvas>
        <TextBox x:Name="txtNumber"  TextAlignment ="Center" TextWrapping="Wrap" Text="{Binding NewCounter.Number}"  Width="120" Canvas.Left="355" Canvas.Top="113" FontSize="18" IsReadOnly="True" IsEnabled="False"/>
        <Button x:Name="btnPlus" Command ="{Binding PlusCommand}"  Content="+" Canvas.Left="222" Canvas.Top="197" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Width="63"/>
        <Button x:Name="btnMinus"   Command ="{Binding MinusCommand}" Content="-" Canvas.Left="471" Canvas.Top="197" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Width="51"/>
    </Canvas>
</Window>
